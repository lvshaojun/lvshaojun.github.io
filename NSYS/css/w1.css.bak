/* head */
.head{
	width:100%;
	height:217px;
	margin:0px auto;
	background:#fff;
}
.headtop{
	width:1000px;
	height:37px;
	margin:0px auto;
	font-size:14px;
	position:relative;
}
.headtop p{
	line-height:37px;
	color:#8d888f;
	float:left;
}
.headtop a{
	display:inline-block;
	padding-right:15px;
	padding-left:15px;
	line-height:37px;
	color:#8d888f;
	float:right;
}
.headtop_sp1{
	color:#ccc;
	position:absolute;
	right:80px;
	top:8px;
}
.headtop_sp2{
	color:#ccc;
	position:absolute;
	right:164px;
	top:8px;
}
.headtop a:hover{
	color:#018de2;
	transition:1s;
	text-decoration:underline;
}

.headbady{
	width:1000px;
	height:122px;
	margin:0px auto;
}
.hb_li1 img{
	width:255px;
	height:90px;
	float:left;
	margin-top:20px;
}
.hb_li1 img:hover{
	transform:translate(0,-2px);
	box-shadow:0 0 20px rgba(250,250,250,0.3);
}
.hb_li2 h3{
	font-size:20px;
	line-height:30px;
	margin-top:46px;
	margin-left:30px;
	color:#676968;
	float:left;
}
.hb_dl{
	width:192px;
	height:61px;
	float:right;
	padding-top:40px;
	background:url("../img/hdphoen_ico.png") no-repeat left 55px;
}
.hb_dt{
	font-size:13px;
	color:#c0a2ae;
	margin-left:40px;
}
.hb_dd1{
	font-size:25px;
	color:#5d7081;
	margin-left:40px;
}
.hb_dd2{
	font-weight:bold;
	font-size:13px;
	color:#010500;
	margin-left:40px;
}

.headfoot{
	width:100%;
	height:58px;
	background:#008DE2;
}
.hf_ul{
	width:1000px;
	height:58px;
	margin:0px auto;
}
.hf_ul li a{
	font-size:14px;
	color:#fff;
	float:left;
	line-height:58px;
	padding-left:32px;
	padding-right:32px;
	transition:1s;
	border-right:1px solid #49ade8;
	transform:translate(0,-2px);
	box-shadow:0 0 20px rgba(0,0,0,0.3);

}
.hf_ul li:hover a{
	background: url("../img/hover.png") repeat-x center bottom;
}
