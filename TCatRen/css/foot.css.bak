/* 右边栏 */

.right-fixed {
	height:100%;
	width:35px;
	background:#000;
	position:fixed;
	right:0;
	z-index:100;
}
.fix-top {
	height:350px;
	margin-top:200px;
}
.fix-top div {
	height:35px;
	margin:10px 0;
	color:#fff;
	font-size:15px;
	line-height:35px;
	text-align:center;
}
.fix-bottom {
	height:70px;
	margin-top:20px;
	font-size:15px;
	line-height:35px;
	text-align:center;
}
.fix-bottom div {
	height:35px;
	color:#fff;

}
.fix-top div:hover {
	background:red;
}
.fix-bottom div:hover {
